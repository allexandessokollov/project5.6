#include <vcl.h>
#pragma hdrstop

#include "project_5_6.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
        : TForm(Owner)
{
}
//---------------------------------------------------------------------------


int TForm1::firstNegative(int arr[], int arrLength)
{
    for(int i = 0; i < arrLength; i++)
    {
        if(arr[i] < 0)
        {
            return i;
        }
    }

    return -1;
}

int TForm1::secondNegative(int arr[], int arrLength)
{
    bool isFirst = false;
    int index;
    for(int i = 0; i < arrLength; i++)
    {
        if(arr[i] < 0)
        {
            isFirst = true;
            continue;
        }
        if else(arr[i] < 0 && isFirst)
        {
            return i;
        }
    }

    return -1;   
}
